<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyc.mapper.ArticleTagMapper">

    <resultMap id="BaseResultMap" type="com.lyc.model.po.ArticleTag">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="articleId" column="article_id" jdbcType="INTEGER"/>
            <result property="tagId" column="tag_id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,article_id,tag_id
    </sql>

    <insert id="saveBatchArticleTag">
        insert into t_article_tag(article_id,tag_id) values
        <foreach collection="tagIdList" item="tagId" separator=",">
            (#{articleId},#{tagId})
        </foreach>
    </insert>
</mapper>
